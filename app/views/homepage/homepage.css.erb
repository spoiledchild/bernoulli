/*網站背景色+margin:0推到全部空間+z-index設定為最底層 */
body{
     /* bottom, image */
    margin:0;
    background: #fffff0;  
    background-size: block ;
	z-index: -1;
}


/* 實驗室logo+名稱位置 */

#lab_logo{
	width: 100px;
	display: inline;
	vertical-align: middle;
	padding: 10px;
}

#lab_name{
	display: inline;
	vertical-align: middle;
}


/* 把導覽列固定在網頁上方+靠右排成一列 */
.fixed-nav-bar{
	display: inline;
	position: fixed;
	top: 0;
	right: 0;
	width: 100%;
	height: 40px;
	background-color: #00477d;
	list-style-type: none;
	text-align: right;
	z-index: 9999;
}

/* 從直欄變橫列 */
#navbar ul li{
	display: inline;
	margin: 5px;
	position: relative;
	top: -7px;
}

/* 導覽列去掉連結預設的底線 */
#navbar ul li a{
	text-decoration: none;
	padding:2px;
}
/* 導覽列設定滑鼠點擊+目前所在頁面變色 */
#navbar a:link{	color: #fffff0;}
#navbar a:visited{ color: #fffff0;}
#navbar a:hover{ color: #7ab8cc; 
	border: solid 2px #7ab8cc;
	border-radius: 8px;}
#navbar a:focus{ color: #7ab8cc;
	border: solid 2px #7ab8cc;
	border-radius: 8px;}
#navbar a:active{ color: #7ab8cc;
	border: solid 2px #7ab8cc;
	border-radius: 8px;}

/* 導覽列設定下拉式選單 */
#navbar ul li ul {
    /* 讓第二層ul跳脫文件流以利定位 */
    position:absolute;
    /* 未點擊時隱藏下拉式選單 */
    visibility: hidden;
    /* 固定寬度 */
    width:175px;
    /* 避免出現捲軸 */
    overflow:visible;
    /* 讓ul與母階層li相同位置 */
    clear:left;
    margin-top: 30px;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: -7px;
}

#navbar ul li:hover ul {
    /* 觸動第一層時，顯示第二層下拉選單 */
    visibility:visible;
    background: #00477d;
    top: 0;
    left:0;
    padding-left: 3px;
}

#navbar ul li ul{       /* 把該死的左邊差距拖回來= =，我找了一天終於找到這行程式碼了 */
	padding-left: 0px;
	text-align: left;
}


#navbar ul li:hover ul li a:hover{  /* 當滑鼠移到下拉式選單時，變色顯示停留的選項 */
	color: #7ab8cc;
	border-style: none;
	border-radius: 0px; 
}
/* 搜尋bar start */
#search {
	display: inline;
	margin-right: 20px;
}

#search input[type="text"] {
    background: url(search-white.png) no-repeat 10px 6px #fffff0;
    border: 0 none;
    color: #00477d;
    width:80px;
    padding: 6px 15px 6px 35px;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
    border-radius: 20px;
    text-shadow: 0 2px 2px rgba(0, 0, 0, 0.2); 
    -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 3px rgba(0, 0, 0, 0.3) inset;
    -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 3px rgba(0, 0, 0, 0.3) inset;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 3px rgba(0, 0, 0, 0.3) inset;
    -webkit-transition: all 0.7s ease 0s;
    -moz-transition: all 0.7s ease 0s;
    -o-transition: all 0.7s ease 0s;
    transition: all 0.7s ease 0s;
    }

#search input[type="text"]:focus {
    background: url(search-dark.png) no-repeat 10px 6px #ffffff;
    border: 0 none;
    color: #6a6f75;
    width: 200px;
    -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 0 rgba(0, 0, 0, 0.9) inset;
    -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 0 rgba(0, 0, 0, 0.9) inset;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 0 rgba(0, 0, 0, 0.9) inset;
    text-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }
